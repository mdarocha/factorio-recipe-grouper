{
  "imports": {
    "preact": "https://cdn.skypack.dev/preact@10.20.0?dts&min",
    "preact/hooks": "https://cdn.skypack.dev/preact@10.20.0/hooks?dts&min",
    "preact/jsx-runtime": "https://cdn.skypack.dev/preact@10.20.0/jsx-runtime?dts&min",
    "preact/jsx-dev-runtime": "https://cdn.skypack.dev/preact@10.20.0/jsx-dev-runtime?dts&min"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "lib": [ "dom", "ES2015" ]
  },
  "fmt": {
    "lineWidth": 120,
    "indentWidth": 4,
    "exclude": [ "*.json" ]
  },
  "tasks": {
    "start": "deno run --watch --allow-net --allow-read --allow-write --allow-env ./build/serve.ts",
    "build": "deno run --allow-net --allow-read --allow-write --allow-env ./build/build.ts"
  }
}
